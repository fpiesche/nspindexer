{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint Markdown",
            "type": "shell",
            "command": "docker run -it --rm -v ${PWD}:/workdir ghcr.io/igorshubovych/markdownlint-cli:latest /workdir",
            "problemMatcher": {
                "owner": "markdown",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                      "regexp": "^/workdir/(.*):(\\d+):(\\d+)\\s+(MD\\d+.*?)\\s+(.*)$",
                      "file": 1,
                      "line": 2,
                      "column": 3,
                      "code": 4,
                      "message": 5
                    }
                  ]
            },
            "group": {
                "kind": "test",
            }
        },
        {
            "label": "Lint Dockerfiles",
            "type": "shell",
            "command": "docker run --rm -it -v ${PWD}:/workspace hadolint/hadolint hadolint /workspace/php-apache.Dockerfile /workspace/php-fpm.Dockerfile",
            "group": {
                "kind": "test",
            },
            "problemMatcher": {
                "owner": "docker",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                      "regexp": "^/workspace/(.*):(\\d+)\\s+(DL\\d+)\\s+(.*):\\s+(.*)$",
                      "file": 1,
                      "line": 2,
                      "code": 3,
                      "severity": 4,
                      "message": 5
                    }
                  ]
            },
       },
    ]
}